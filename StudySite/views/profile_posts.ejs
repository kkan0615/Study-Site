<!DOCTYPE html>
<html>
    <head>
    <% include ./layout %>
    <head>
    <body>
        <% include ./sidevar %>
        <div class="sidevar">
            <a href="">닉네임재설정</a>
            <a href="">내가쓴글</a>
            <a href="">커뮤니티니</a>
            <a href="">아이디삭제</a>
        </div>
        <div class="content">
            <% if(user.posts) { %>
                <table class="table_list">
                    <th>
                        <td>Title</td>
                        <td>CratedAt</td>
                    </th>
                    <% user.posts.forEach(post => { %>
                        <tr>
                            <td></td>
                            <td><a href="/post/<%= post.id %>"><%= post.title %></a></td>
                            <td><%= post.createdAt %></td>
                        </tr>
                    <% });%>
                </table>
            <% } %>
            <%= %>
            <% if(user.communities) { %>
                <table class="table_list">
                    <thead>
                    <th>
                        <th scope="cols">title</th>
                        <th scope="cols">createdAt</th>
                    </th>
                    </thead>
                    <tbody>
                    <% user.communities.forEach(community => { %>
                        <tr>
                            <td></td>
                            <td><a href="/community/<%= community.title_url %>"><%= community.title %></a></td>
                            <td><%= community.createdAt %></td>
                        </tr>
                    <% });%>
                    </tbody>
                </table>
            <% } %>
            <%= %>
    </body>
</html>
