                <tr>
                    <th scope="cols">title</th>
                    <th scope="cols">author</th>
                    <th scope="cols">timestamp</th>
                </tr>
            </thead>
            <tbody>
                <% list.forEach(post => { %>
                    <tr>
                        <th scope="row"><a href="/post/<%= post.id %>"><%= post.title %></a></td>
                        <td><%= post.author.nickname %></td>
                        <td><%= post.createdAt %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
